{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "watchPatterns": [
            "/entrypoint.sh",
            "/api/*.py",
            "/api/**/*.py",
            "/bilim_ai/*.py",
            "/Dockerfile",
            "/pyproject.toml"
        ]
    },
    "deploy": {
        "restartPolicyType": "ON_FAILURE"
    }
}